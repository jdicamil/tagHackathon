<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/openGdb"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Select GDB" />

    <Button
        android:id="@+id/selectionNew"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Selection NEW" />
    <Button
        android:id="@+id/selectionAdd"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Selection ADD" />
     <Button
        android:id="@+id/selectionSubtract"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="Selection SUBTRACT" />


</LinearLayout>

<com.esri.android.map.MapView
android:id="@+id/offlineMap"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>
</com.esri.android.map.MapView>

</LinearLayout>